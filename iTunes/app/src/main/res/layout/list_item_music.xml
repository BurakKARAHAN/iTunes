<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayout_music"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="5dp"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:layout_width="125dp"
        android:layout_height="155dp"
        android:layout_centerHorizontal="true"
        card_view:cardCornerRadius="5dp"
        android:background="@color/black">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_musicArtworkUrl100"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/image_musicPlay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_play"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/image_musicPause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_pause"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>



    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/icon_microphone"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="2dp" />

            <TextView
                android:id="@+id/text_musicArtistName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textSize="18sp"
                android:gravity="left"
                android:minLines="1"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/testGray"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/icon_note"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="0dp"/>

            <TextView
                android:id="@+id/text_musicTrackName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:gravity="left"
                android:minLines="1"
                android:maxLines="1"
                android:textColor="@color/testGray"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
